<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.demo.CreateJobs"
    android:background="@drawable/bg_repeat" >

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:paddingBottom="20dp"
        >
        <EditText 
            android:id="@+id/job_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="area"
            android:textColorHint="#bbbbbb"
            android:inputType="none"/>
        <EditText 
            android:id="@+id/job_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="city"
            android:textColorHint="#bbbbbb"
            android:inputType="text|textNoSuggestions"/>
        <EditText 
            android:id="@+id/job_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="country"
            android:textColorHint="#bbbbbb"
            android:inputType="textNoSuggestions"/>
        <EditText 
            android:id="@+id/job_mobile_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="mobile number"
            android:textColorHint="#bbbbbb"
            android:inputType="phone"/>
        <EditText 
            android:id="@+id/job_pincode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="pincode"
            android:textColorHint="#bbbbbb"
            android:inputType="number"/>
        <EditText 
            android:id="@+id/job_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="state"
            android:textColorHint="#bbbbbb"
            android:inputType="textNoSuggestions"/>
        <EditText 
            android:id="@+id/job_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="description"
            android:textColorHint="#bbbbbb"
            android:inputType="textNoSuggestions"/>
        <EditText 
            android:id="@+id/job_desired_skills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="desired skills"
            android:textColorHint="#bbbbbb"
            android:inputType="textNoSuggestions"/>
        <EditText 
            android:id="@+id/job_experience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="experience"
            android:textColorHint="#bbbbbb"
            android:inputType="none"/>
        <EditText 
            android:id="@+id/job_links"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="job links"
            android:textColorHint="#bbbbbb"
            android:inputType="textEmailAddress"/>
        <EditText 
            android:id="@+id/job_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="job_type"
            android:textColorHint="#bbbbbb"
            android:inputType="textNoSuggestions"/>
        <EditText 
            android:id="@+id/job_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="location"
            android:textColorHint="#bbbbbb"
            android:inputType="none"/>
        <EditText 
            android:id="@+id/job_mail_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="mail to"
            android:textColorHint="#bbbbbb"
            android:inputType="textEmailAddress"/>
        <EditText 
            android:id="@+id/job_organization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="organization"
            android:textColorHint="#bbbbbb"
            android:inputType="textNoSuggestions"/>
        <EditText 
            android:id="@+id/job_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="title/role"
            android:textColorHint="#bbbbbb"
            android:inputType="text"/>
    </LinearLayout>

</ScrollView>
