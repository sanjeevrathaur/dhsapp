<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.demo.JobDetail" 
    android:background="@drawable/main_bg">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    >
        <TextView 
            android:id="@+id/detail_job_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff9900"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Title"/>
        <TextView 
            android:id="@+id/detail_organization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="20sp"
            android:text="organization"/>
        
      <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginTop="10dp"
      >
      <ImageView 
          android:layout_width="25dp"
          android:layout_height="25dp"
          android:contentDescription="exp"
          android:src="@drawable/exp_img"/>
      <TextView 
          android:id="@+id/detail_experience"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text=" 3 - 5 Years"
      android:textColor="#838381"
      android:layout_marginLeft="10dp"
      
      android:textSize="15sp"/>
      <ImageView 
          android:layout_width="25dp"
          android:layout_height="25dp"
          android:contentDescription="vacancy"
          android:src="@drawable/vacancy_icon"
          android:layout_marginLeft="30dp"/>
      
      <TextView 
          android:id="@+id/detail_vacany"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="vacany 5"
      android:textColor="#838381"
      android:layout_marginLeft="10dp"
      
      android:textSize="15sp"/>
      
  </LinearLayout>
  
      <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >
      <ImageView 
          android:layout_width="25dp"
          android:layout_height="25dp"
          android:contentDescription="detail_location"
          android:src="@drawable/ic_action_place"/>
      <TextView 
          android:id="@+id/detail_location"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text=" Noida/Delhi"
      android:textColor="#838381"
      android:layout_marginLeft="10dp"
      
      android:textSize="15sp"/>
      </LinearLayout>
      
       <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >
      <ImageView 
          android:layout_width="25dp"
          android:layout_height="25dp"
          android:contentDescription="detail_salary"
          android:src="@drawable/salary_icon"/>
      <TextView 
          android:id="@+id/detail_salary"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text=" INR 5,00,000-8,00,000 P.A."
      android:textColor="#838381"
      android:layout_marginLeft="10dp"
      
      android:textSize="15sp"/>
      </LinearLayout>
      
       <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >
      <ImageView 
          android:layout_width="25dp"
          android:layout_height="25dp"
          android:contentDescription="detail_job_posted_date"
          android:src="@drawable/posted_date_icon"/>
      <TextView 
          android:id="@+id/detail_job_posted_date"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text=" Posted on 18 March,2015"
      android:textColor="#838381"
      android:layout_marginLeft="10dp"
      
      android:textSize="15sp"/>
      </LinearLayout> 
      
       <TextView 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Job Description"
           android:textSize="20sp"
           android:layout_marginTop="20dp"/>
       <TextView 
           android:id="@+id/detail_job_description"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="lsjkgldsjfgljasdlfgjlkdjfg
           dsakfgjlkdjfgjdskjfgkldsjkfjgkjdkfjkjdsff"
           android:textColor="@color/text_color"
           android:layout_marginLeft="10dp"
           android:textSize="16sp"
           
           />
       
        <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginTop="20dp"
      >
      <TextView 
          android:layout_width="70dp"
          android:layout_height="wrap_content"
          android:text="Functional Area"
          android:textColor="#838381"
          />
      <TextView 
          android:id="@+id/detail_functional_area"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text=" IT Software-Application Programming,Maintenence"
      android:textColor="@color/text_color"
      android:layout_marginLeft="20dp"
      
      android:textSize="16sp"
      />
      </LinearLayout>
       <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginTop="18dp"
      >
      <TextView 
          android:layout_width="70dp"
          android:layout_height="wrap_content"
          android:text="Role"
          android:textColor="#838381"/>
      <TextView 
          android:id="@+id/detail_role"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text=" Software Developer"
      android:textColor="@color/text_color"
      android:layout_marginLeft="20dp"
      
      android:textSize="16sp"/>
      </LinearLayout>
      
     <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginTop="18dp"
      >
      <TextView 
          android:layout_width="70dp"
          android:layout_height="wrap_content"
          android:text="Key Skills"
          android:textColor="#838381"/>
      <TextView 
          android:id="@+id/detail_key_skills"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text=" Java,Android,Spring,Hibernate"
      android:textColor="@color/text_color"
      android:layout_marginLeft="20dp"
      
      android:textSize="16sp"/>
    </LinearLayout>  
     <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginTop="18dp"
      >
      <TextView 
          android:layout_width="70dp"
          android:layout_height="wrap_content"
          android:text="Jobs Link"
          android:textColor="#838381"/>
      <TextView 
          android:id="@+id/detail_jobs_link"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text=" www.facebook.com"
      android:textColor="@color/text_color"
      android:layout_marginLeft="20dp"
      
      android:textSize="16sp"/>
      </LinearLayout>
       <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginTop="18dp"
      >
      <TextView 
          android:layout_width="70dp"
          android:layout_height="wrap_content"
          android:text="Jobs Type"
          android:textColor="#838381"/>
      <TextView 
          android:id="@+id/detail_jobs_type"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text=" permanent"
      android:textColor="@color/text_color"
      android:layout_marginLeft="20dp"
      
      android:textSize="16sp"/>
    </LinearLayout>  
    
        <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginTop="18dp"
      >
      <TextView 
          android:layout_width="70dp"
          android:layout_height="wrap_content"
          android:text="Mail To:"
          android:textColor="#838381"/>
      <TextView 
          android:id="@+id/detail_mail_to"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text=" www.facebook.com"
      android:textColor="@color/text_color"
      android:layout_marginLeft="20dp"
      
      android:textSize="16sp"/>
    </LinearLayout>
    <Button 
        android:id="@+id/job_apply_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="@drawable/button_selector"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"/>
</LinearLayout>
</ScrollView>